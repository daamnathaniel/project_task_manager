<h1>PROJECTS LIST</h1>

<%= button_to "Create Project", new_project_path, method: :get %>

<h3>Empty Projects</h3>
<ul>
<% @empty_projects.each do |project| %>
    <li><%= link_to project.name, project_path(project) %></li>
<% end %>
</ul>

<h3>Pending Projects</h3>
<ul>
<% @pending_projects.each do |project| %>
    <li><%= link_to project.name, project_path(project) %></li>
<% end %>
</ul>

<h3>Completed Projects</h3>
<ul>
<% @completed_projects.each do |project| %>
    <li><%= link_to project.name, project_path(project) %></li>
<% end %>
</ul>